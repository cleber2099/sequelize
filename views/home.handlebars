<h1>Users : </h1>
<div class=" container">
{{#each users}}
<div class="item">
    <p>{{this.name}}</p>
    <p>{{this.occupation}}</p>
    <div>
        <a href="/users/{{this.id}}" class="details-btn">Ver melhor</a>
        <form action="/users/delete/{{this.id}}" method="POST">
        <input type="submit" value="Excluir" class="delete-btn">
        </form>
    </div>
</div>
{{/each}}
</div>